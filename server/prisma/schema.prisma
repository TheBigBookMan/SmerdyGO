generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

//!!!!
//!!! ANY TIME CHANGING THE DATABASE HAVE TO USE 'npx prisma generate' FOR CLIENT UPDATE
//!!!
//!!!

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  password String
}